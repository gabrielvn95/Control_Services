<%= form_with(model: vehicle, local: true) do |f| %>

  <% if vehicle.errors.any? %>
    <div class="alert alert-danger">
      <h6 class="mb-2">
        Não foi possível salvar o veículo:
      </h6>
      <ul class="mb-0">
        <% vehicle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome do Veículo", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Ex: Gol, Civic, Corolla" %>
  </div>

  <div class="mb-3">
    <%= f.label :plate, "Placa", class: "form-label" %>
    <%= f.text_field :plate, class: "form-control", placeholder: "ABC-1234" %>
  </div>

  <div class="mb-3">
    <%= f.label :client_id, "Cliente", class: "form-label" %>
    <%= f.collection_select :client_id,
          Client.order(:name),
          :id,
          :name,
          { prompt: "Selecione um cliente" },
          { class: "form-select" } %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= f.submit "Salvar Veículo", class: "btn btn-primary" %>
  </div>

<% end %>
